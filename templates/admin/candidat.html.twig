<table class="table">
  <thead class="table-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nom</th>
      <th scope="col">Prenom</th>
      <th scope="col">Email</th>
      
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody class="table-secondary">
    {% for candid in candidats %} 
    <tr>
    <td>{{candid.id}}</td>
    <td>{{candid.nom}}</td>
    <td>{{candid.prenom}}</td>
    <td>{{candid.email}}</td>
   
    <td><button type="button" class="btn btn-danger" ><a href={{path('supprimerCandidat',{'id':candid.id})}}><i class="fa fa-trash" aria-hidden="true"></i></a></button> </td>
    </tr>
    {% endfor %}
  </tbody>
