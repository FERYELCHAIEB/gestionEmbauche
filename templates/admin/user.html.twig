{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
     table{
       font-size:20px;
     }
     .dex{
         margin-left:790px;
       }
       a{
         color:white;
       }
       .fa{
         font-size:20px;
         padding: 8px 8px;
       }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Admin</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href={{path('profilAdmin')}}>ACCUEIL <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">USERS</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href={{path('gestionCandidat')}}>CANDIDATS</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled dex" href={{path('app_logout')}}>DECONNEXION</a>
      </li>
    </ul>
  </div>
</nav>
<br/>
<h1>Liste des users<h1>
<br/>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">NOM</th>
      <th scope="col">PRENOM</th>
      <th scope="col">EMAIL</th>

      <th scope="col">ACTION</th>
   
    </tr>
  </thead>
  <tbody class="table-secondary">
    {% for us in users %} 
    <tr>
    <td>{{us.id}}</td>
    <td>{{us.nom}}</td>
    <td>{{us.prenom}}</td>
    <td>{{us.email}}</td>
    <td><button type="button" class="btn btn-info" ><a href={{path('modifierUser',{'id':us.id})}}><i class="fa fa-pencil" aria-hidden="true"></i></a></button> 
  <button type="button" class="btn btn-danger" ><a href={{path('supprimerUser',{'id':us.id})}}><i class="fa fa-trash" aria-hidden="true"></i></a></button> </td>
   
    </tr>
    {% endfor %}
  </tbody>

</table>
 
{% endblock body %}

