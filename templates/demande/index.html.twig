{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %} 

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
     table{
       font-size:20px;
     }
       .dex{
         margin-left:790px;
       }
        a{
         color:white;
       }
       .fa{
         font-size:20px;
         padding: 8px 8px;
       }
</style>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Mon Profil</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active" href={{path('candidatProfil')}}>Acceuil <span class="sr-only">(current)</span></a>
     <a class="nav-item nav-link" href="#">Offres d'emplois</a>
      <a class="nav-item nav-link" href="#">Demande</a>
      <a class="nav-item nav-link dex" href={{path('app_logout')}}>Deconnexion</a>
      
    </div>
  </div>
</nav>
<br/>
<h1>Liste des demandes <h1>
<h6><a href={{path('demandeCreate')}}>Ajouter</a></h6>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Titre</th>
      <th scope="col">Budget</th>
      <th scope="col">Technologies</th>
      <th scope="col">Categorie</th>
      <th scope="col">Actions</th>
   
    </tr>
  </thead>
  <tbody class="table-secondary">
    {% for d in demande %} 
    <tr>
    <td>{{d.id}}</td>
    <td>{{d.titre}}</td>
    <td>{{d.budget}}</td>
    <td>{{d.technologie}}</td>
   <td>{{d.categorie.nom}}</td>
   <td><button type="button" class="btn btn-success" ><a href={{path('afficheDemandeById',{'id':d.id})}}> <i class="fa fa-eye" aria-hidden="true"></i> </a></button>
    <button type="button" class="btn btn-info" ><a href={{path('modifierDemande',{'id':d.id})}}><i class="fa fa-pencil" aria-hidden="true"></i></a></button>
    <button type="button" class="btn btn-danger" ><a href={{path('supprimerDemande',{'id':d.id})}}> <i class="fa fa-trash" aria-hidden="true"></i> </a></button>
    

    </td>
    </tr>
    {% endfor %}
  </tbody>

</table>
 
{% endblock body %}

